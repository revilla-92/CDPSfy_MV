        setfattr -x trusted.gfid /nas;
        rm -rf /nas/.glusterfs
    </exec>
  </vm>

  <host>
    <hostif net="LAN1">
       <ipv4>10.1.1.2/24</ipv4>
    </hostif>
    <route type="ipv4" gw="10.1.1.1">10.1.0.0/16</route>
  </host>

</vnx>
