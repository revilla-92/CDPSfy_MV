<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>p7</scenario_name>
    <ssh_key>/root/.ssh/id_dsa.pub</ssh_key>
    <ssh_key>/home/cdps/.ssh/id_dsa.pub</ssh_key>
    <automac/>
    <!--vm_mgmt type="none" /-->
    <vm_mgmt type="private" network="10.250.0.0" mask="24" offset="200">
       <host_mapping />
    </vm_mgmt>
    <vm_defaults>
        <console id="0" display="no"/>
        <console id="1" display="yes"/>
    </vm_defaults>
  </global>

  <net name="LAN1" mode="virtual_bridge" />
  <net name="LAN2" mode="virtual_bridge" />
  <net name="LAN3" mode="virtual_bridge" />
  <net name="virbr0" mode="virtual_bridge" managed="no"/>


  <vm name="c1" type="lxc">
    <filesystem type="cow">filesystems/rootfs_lxc-cdps</filesystem>
    <if id="1" net="LAN1">
      <ipv4>10.1.1.11/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.1">10.1.0.0/16</route>   
    <forwarding type="ip" />
  </vm>

  <vm name="c2" type="lxc">
    <filesystem type="cow">filesystems/rootfs_lxc-cdps</filesystem>
    <if id="1" net="LAN1">
      <ipv4>10.1.1.12/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.1">10.1.0.0/16</route>   
    <forwarding type="ip" />
  </vm>

  <vm name="nagios" type="lxc">
    <filesystem type="cow">filesystems/rootfs_lxc-cdps</filesystem>
    <if id="1" net="LAN1">
      <ipv4>10.1.1.13/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.1.1">10.1.0.0/16</route>   
    <forwarding type="ip" />
  </vm>

  <vm name="lb" type="lxc">
    <filesystem type="cow">filesystems/rootfs_lxc-cdps</filesystem>
    <if id="1" net="LAN1">
      <ipv4>10.1.1.1/24</ipv4>
    </if>
    <if id="2" net="LAN2">
      <ipv4>10.1.2.1/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <forwarding type="ip" />
  </vm>

  <vm name="s1" type="lxc">
    <filesystem type="cow">filesystems/rootfs_lxc-cdps</filesystem>
    <if id="1" net="LAN2">
      <ipv4>10.1.2.11/24</ipv4>
    </if>
    <if id="2" net="LAN3">
      <ipv4>10.1.3.11/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.2.1">10.1.0.0/16</route>   
    <exec seq="on_boot" type="verbatim">
        mknod -m 666 /dev/fuse c 10 229;
    </exec>
  </vm>

  <vm name="s2" type="lxc">
    <filesystem type="cow">filesystems/rootfs_lxc-cdps</filesystem>
    <if id="1" net="LAN2">
