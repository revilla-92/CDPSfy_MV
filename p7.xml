      <ipv4>10.1.3.12/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.2.1">10.1.0.0/16</route>   
    <exec seq="on_boot" type="verbatim">
        mknod -m 666 /dev/fuse c 10 229;
    </exec>
  </vm>

